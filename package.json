{
  "name": "bamboo-mcp",
  "version": "0.2.0",
  "description": "All-in-One MCP Gateway combining Meta Ads and PostgreSQL functionality",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting not configured yet\"",
    "docker:build": "docker build -t bamboo-mcp .",
    "docker:run": "docker run -p 8443:8443 bamboo-mcp"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "meta-ads",
    "postgresql",
    "gateway",
    "proxy",
    "ai",
    "claude"
  ],
  "author": {
    "name": "Jay Wong",
    "email": "jay@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/bamboo-mcp.git"
  },
  "homepage": "https://github.com/example/bamboo-mcp#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-facebook-token": "^4.0.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook-token": "^0.4.38",
    "@types/pg": "^8.10.7",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
